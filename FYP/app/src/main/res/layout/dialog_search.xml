<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/XML_searchDialog"
    android:padding="16dp">


    <TextView
        android:id="@+id/searchbyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search By"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/searchByLine"
        android:layout_below="@+id/searchbyTxt"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_green_dark"/>

    <RelativeLayout
        android:layout_below="@+id/searchByLine"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Nearest Location"
           android:textSize="17dp"
           android:id="@+id/XML_t1"
           android:paddingTop="15dp"
           android:paddingLeft="10dp"
           />

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Best Ratings"
           android:textSize="17dp"
           android:id="@+id/XML_t2"
           android:paddingTop="15dp"
           android:paddingLeft="10dp"
           android:layout_below="@+id/XML_t1"
           />

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Alphabetically"
           android:textSize="17dp"
           android:id="@+id/XML_t3"
           android:paddingTop="15dp"
           android:paddingLeft="10dp"
           android:layout_below="@+id/XML_t2"
           />

       <Switch
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:paddingTop="20dp"
           android:paddingRight="10dp"
           android:id="@+id/XML_s1"/>
       <Switch
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:paddingTop="20dp"
           android:paddingRight="10dp"
           android:id="@+id/XML_s2"
           android:layout_below="@+id/XML_s1"/>
       <Switch
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:paddingTop="20dp"
           android:paddingRight="10dp"
           android:id="@+id/XML_s3"
           android:layout_below="@+id/XML_s2"/>
   </RelativeLayout>


</RelativeLayout>