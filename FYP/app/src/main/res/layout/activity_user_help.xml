<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sheikhrashid.fyp.UserHelp">

    <TextView
        android:id="@+id/XML_faq"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black"
        android:text="      Asked About your Conflicts"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/line_XML"
        android:layout_below="@+id/XML_faq"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_green_dark"/>




    <TextView
        android:id="@+id/txt_simple"
        android:layout_below="@+id/line_XML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:paddingBottom="30dp"
        android:text="If you have any conflict or you find some bug in our Application kindly let us know so we can help you with this, firstly write your Email ID through which we can contact you and help you ith your conflict and then mention your conflict in detail. We  will contact you as soon as possible through your Email ID."/>

    <View
        android:id="@+id/line_XML1"
        android:layout_below="@+id/txt_simple"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@android:color/holo_green_dark"/>


    <EditText
        android:id="@+id/faq_email"
        android:hint="Enter your Email..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_XML1"
        android:paddingTop="30dp"
        android:theme="@style/EditTextTheme2"/>

    <EditText
        android:id="@+id/faq_question"
        android:hint="Your Conflicts or Questions ...."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faq_email"
        android:theme="@style/EditTextTheme2"/>

    <Button
        android:id="@+id/XML_FAQ_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>
